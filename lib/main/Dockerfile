FROM golang:1.22.0-bookworm

WORKDIR /app

ARG TEST_DATABASE_URL
ARG TURSO_AUTH_TOKEN

ENV TEST_DATABASE_URL=$TEST_DATABASE_URL
ENV TURSO_AUTH_TOKEN=$TURSO_AUTH_TOKEN

RUN echo "TEST_DATABASE_URL: $TEST_DATABASE_URL"
RUN echo "TURSO_AUTH_TOKEN: $TURSO_AUTH_TOKEN"

COPY go.mod go.sum ./

RUN go mod download

COPY . .

RUN CGO_ENABLED=0 GOOS=linux go build -o /domain-app

EXPOSE 8080

CMD ["/domain-app"]
